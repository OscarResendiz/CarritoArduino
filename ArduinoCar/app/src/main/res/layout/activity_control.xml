<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="401dp"
            android:layout_height="167dp"
            app:srcCompat="@drawable/logocell2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:layout_below="@id/imageView7"
            app:srcCompat="@drawable/cochearduino" />

        <ImageView
            android:id="@+id/flecha_arriba"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_below="@id/imageView8"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/flecha_arriba" />
        <ImageView
            android:id="@+id/flecha_izquierda"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_below="@id/flecha_arriba"
            app:srcCompat="@drawable/flecha_izquierda" />
        <ImageView
            android:id="@+id/flecha_stop"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_below="@id/flecha_arriba"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/stop" />
        <ImageView
            android:id="@+id/flecha_derecha"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_below="@id/flecha_arriba"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/flecha_derecha" />
        <ImageView
            android:id="@+id/flecha_abajo"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_below="@id/flecha_derecha"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/flecha_abajo" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>